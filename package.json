{
    "name": "a2fm",
    "version": "1.0.0",
    "description": "Aspera 2 Facilis Migration",
    "author": "Jeremy Barnes",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jbpkp07/a2fm.git"
    },
    "scripts": {
        "build": "npm run fix:all -s && npm run clean -s && npm run webpackify -s",
        "clean": "npm run log:begin -s \"Cleaning Build Dirs\" && del-cli ./dist/* ./cache/* -f && npm run log:end -s",
        "fix:all": "npm run fix:eslint -s && npm run fix:prettier -s",
        "fix:eslint": "npm run log:begin -s \"ESLint Fixing\" && eslint --fix --ext=.js,.ts,.jsx,.tsx . && npm run log:end -s",
        "fix:prettier": "npm run log:begin -s \"Prettier Fixing\" && prettier --write . && prettier --check .",
        "log:begin": "node -e \"console.log(`\\n ► ${(process.argv[1] + ' ').padEnd(76, '─')}┐\\n`)\"",
        "log:end": "node -e \"console.log(`   Completed.`)\"",
        "postinstall": "mkdirp ./cache ./dist",
        "start": "node --enable-source-maps ./dist/index.js",
        "start:dev": "ts-node-dev --cache-directory ./cache --respawn ./src/index.ts",
        "webpackify": "npm run log:begin -s \"Building Dist\" && cross-env TS_NODE_PROJECT=\"./webpack/tsconfig.json\" webpack --config ./webpack/webpack.config.ts"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/node": "^16.11.11",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "cross-env": "^7.0.3",
        "del-cli": "^4.0.1",
        "eslint": "^8.4.0",
        "eslint-config-airbnb": "^19.0.2",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^5.2.0",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-sonarjs": "^0.11.0",
        "eslint-webpack-plugin": "^3.1.1",
        "mkdirp": "^1.0.4",
        "prettier": "^2.5.1",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.2",
        "webpack": "^5.64.4",
        "webpack-cli": "^4.9.1"
    }
}
